<?xml version="1.0"?>
<robot name="ardak" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define robot constants -->
  <xacro:property name="base_width" value="0.61" />
  <xacro:property name="base_length" value="0.72" />
  <xacro:property name="base_height" value="0.24" />

  <xacro:property name="wheel_radius" value="0.05" />
  <xacro:property name="wheel_width" value="0.03" />
  <xacro:property name="wheel_link_zoff" value="0.1" />
  <xacro:property name="wheel_link_yoff" value="0.1" />
  <xacro:property name="wheel_link_xoff" value="0.1" />

  <xacro:property name="camera_link_zoff" value="0.1" />
  <xacro:property name="camera_link_yoff" value="0.1" />
  <xacro:property name="camera_link_xoff" value="0.1" />

  <link name="base_link">
    <parent link="t265_frame" />
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}" />
      </geometry>
    </visual>
  </link>
  
  <link name="camera_link">
    <parent link="base_to_camera_joint" />
  </link>

  <link name="front_left_wheel">
    <parent link="front_left_drive_joint" />
    <origin xyz="0 0 0" />
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
    </visual>
  </link>

  <link name="front_right_wheel">
    <parent link="front_right_drive_joint" />
    <origin xyz="0 0 0" />
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
    </visual>
  </link>

  <link name="rear_left_wheel">
    <parent link="rear_left_drive_joint" />
    <origin xyz="0 0 0" />
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
    </visual>
  </link>

  <link name="rear_right_wheel">
    <parent link="rear_right_drive_joint" />
    <origin xyz="0 0 0" />
    <visual>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}" />
      </geometry>
    </visual>
  </link>

  <joint name="base_to_camera_joint" type="fixed">
    <parent link="base_link" />
    <child link="camera_link" />
    <origin xyz="${camera_link_xoff} ${camera_link_yoff} ${camera_link_zoff}" />
  </joint>

  <joint name="front_left_drive_joint" type="continuous" >
    <parent link="base_link" />
    <child link="front_left_wheel" />
    <origin xyz="${-wheel_link_xoff} ${wheel_link_yoff} ${-wheel_link_zoff}" />
  </joint>

  <joint name="front_right_drive_joint" type="continuous" >
    <parent link="base_link" />
    <child link="front_right_wheel" />
    <origin xyz="${wheel_link_xoff} ${wheel_link_yoff} ${-wheel_link_zoff}" />
  </joint>

  <joint name="rear_left_drive_joint" type="continuous" >
    <parent link="base_link" />
    <child link="rear_left_wheel" />
    <origin xyz="${-wheel_link_xoff} ${-wheel_link_yoff} ${-wheel_link_zoff}" />
  </joint>

  <joint name="rear_right_drive_joint" type="continuous" >
    <parent link="base_link" />
    <child link="rear_right_wheel" />
    <origin xyz="${wheel_link_xoff} ${-wheel_link_yoff} ${-wheel_link_zoff}" />
  </joint>

</robot>